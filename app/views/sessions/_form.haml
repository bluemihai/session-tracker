= form_with(model: session, local: true) do |form|
  - if session.errors.any?
    #error_explanation
      %h2
        = pluralize(session.errors.count, "error")
        prohibited this session from being saved:
      %ul
        - session.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :facilitator
    = form.select :facilitator, id: :session_facilitator
  .field
    = form.label :starting
    = form.datetime_select :starting, id: :session_starting
  .field
    = form.label :kind
    = form.text_field :kind, id: :session_kind
  .actions
    = form.submit
